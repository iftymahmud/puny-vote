<!-- views/home.ejs -->

<%- include('partials/header') %>
<div id="particles-js"></div>
<div class="container mt-5">
  <div class="d-flex justify-content-center align-items-center" style="height: 80vh; position: relative; z-index: 2;">
    <div class="box">
      <h1>Make Decisions Fast</h1>
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <form action="/" method="POST">
        <div class="form-row align-items-center">
          <div class="col-lg-9 col-md-8 col-sm-7 form-group">
            <input
              type="text"
              name="sessionCode"
              placeholder="Enter Session Code"
              class="form-control form-control-lg"
              required
            />
          </div>
          <div class="col-lg-3 col-md-4 col-sm-5 form-group">
            <button type="submit" class="btn btn-warning btn-lg btn-block">
              Join
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer') %>

