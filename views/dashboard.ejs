<!-- views/dashboard.ejs -->
<%- include('partials/header') %>
<div class="container mt-5">
  <div class="signBox">
  <h2>Dashboard</h2>

  <div class="mt-4">
    <a href="/organizer/create-vote-session" class="btn btn-warning">Create New Vote Collection</a>
  </div>

  <div class="my-5">
    <h3>Your Vote Collections</h3>
    <% if (voteSession.length > 0) { %>
      <ul class="dashboardListGroup">
        <% voteSession.forEach(voteSession => { %>
          <li class="dashboardList">
            <strong class="voteCollectionText"><%= voteSession.title %></strong>      
            <div class="text-muted"><i class="fa-regular fa-clock"></i> <%= voteSession.dateCreated.toDateString() %></div>

            <div class="text-right">
              <a href="/organizer/dashboard/controlPanel/<%= voteSession._id %>" class="btn btn-sm btn-outline-warning"><i class="fa-regular fa-circle-play"></i></a> 
              <a href="/organizer/dashboard/questionPreview/<%= voteSession._id %>" class="btn btn-sm btn-outline-warning"><i class="fa-regular fa-eye"></i></a> 
              <a href="/organizer/dashboard/delete/<%= voteSession._id %>" class="btn btn-sm btn-outline-warning"><i class="fa-regular fa-trash-can"></i></a> 
              
            </div>
          </li>
          <br>
        <% }) %>
      </ul>
    <% } else { %>
      <p>You have no vote collections yet.</p>
    <% } %>
  </div>
</div>
</div>
<%- include('partials/footer') %>



