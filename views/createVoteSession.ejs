<!-- views/createSession.ejs -->
<%- include('partials/header') %>
<div class="container mt-5">
  <div class="signBox">
    <h2>Create New Vote Collection</h2>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="/organizer/create-vote-session" method="POST">
      <div class="form-group">
        <label>Title</label>
        <input type="text" name="title" class="form-control" required />
      </div>
      <button type="submit" class="btn btn-warning">Create Vote Collection</button>
    </form>
</div>
</div>
<%- include('partials/footer') %>
