<!-- views/questionPreview.ejs -->
<%- include('partials/header') %>
<div class="container mt-5">
  <div class="signBox">
  <h4 class="text-warning"><i class="fa-solid fa-square-poll-vertical"></i> <%= voteSession.title %></h4>


  <div class="container mt-5">
    <% if (voteSession && voteSession.questions.length > 0) { %>
      <% voteSession.questions.forEach(function(question) { %>
        <div class="card mt-3 bg-dark controlPanelCodeBox" style="width: 40rem;">
          <div class="card-body p-2"> <!-- Reduced padding -->
            <!-- Display question number and text -->
            <h5 class="card-title" style="font-size: 1.2rem; margin-bottom: 0rem;">
              <span class="text-light" style="font-size: 1.2rem;">Question <%= question.questionNumber %>:</span> <%= question.questionText %>
            </h5>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <h5 class="card-title" style="font-size: 1.2rem; padding: 0;">No questions available</h5>
    <% } %>
  </div>


  

  <br><br>
  <a href="/organizer/dashboard" class="btn btn-outline-warning">Go To Dashboard</a>


  </div>
</div>







<%- include('partials/footer') %>